{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node", "express"],

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,

    "allowJs": true,
    "checkJs": false,

    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"]
}
